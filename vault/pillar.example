{%
set nodes = {
  'vault1.example.com': '1.2.3.4',
  'vault2.example.com': '2.3.4.5',
  'vault3.example.com': '3.4.5.6'
}
%}

ufw:
  import_ufw_simple: True
  allow:
    cluster_vault:
      proto: 'tcp'
      from:
        {%- for key, val in nodes.items() %}{%- if grains['id'] != key %}
        {{ key }}: {{ val }}
        {%- endif %}{%- endfor %}
      to_port: '8200,8201'

vault:
  version: '1.21.1'  # Vault version to install from https://releases.hashicorp.com/vault/
  privileged_token: 'abc.XXXXXXXXXXXXXXXXXXXXXXXX'
  unseal_keys:
    - 'AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA='
    - 'BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB='
    - 'CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC='
    - 'DDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDD='
    - 'EEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEE='
  name: {{ grains['id'] }}
  acme:
    enable: true
    domain: {{ grains['fqdn'] }}
  snapshots:
    enable_raft: True
  audit:
    enable: true
    logfile: /var/log/vault_audit.log
  restore:
    snapshot_path: /home/alex.k/vault_25-12-17_amethyst.snap
    unseal_keys:
      - 'WFQkG4aalw+GyUtLkfJwOWldmpo4ZFCuhId4URs7uRSk'
      - 'Ld0Y+4E8kToyUx97F/owhFH4G6UlR4PWh0sGKoXBA7wR'
      - '2Td1kTr/V67HEGqCTtJJfYNVIzV9GVbkYfD6zehGi3sj'
      - 'CJRNoHrAU82g2AVjVwtmXGpO/OjvZM8zh9Bnkq5S8KDj'
      - 'b0DV9/nS/I4OGR0muztvzodRMTdjez/g9LV/6UlFi8xF'
  env_vars:
    VAULT_ADDR: "https://{{ grains['fqdn'] }}:8200"
    VAULT_API_ADDR: "https://{{ grains['fqdn'] }}:8200"
    VAULT_CLUSTER_ADDR: "https://{{ grains['fqdn'] }}:8201"
  config: |
    ui = true
    storage "raft" {
      performance_multiplier = 1
      path = "/vault/data"
      node_id = "{{ grains['id'] }}"
      {%- for key, val in vault_nodes.items() %}{%- if grains['id'] != key %}
      retry_join {
        leader_api_addr = "https://{{ key }}:8200"
      }{%- endif %}{%- endfor %}
    }
    listener "tcp" {
      address = "0.0.0.0:8200"
      cluster_address = "0.0.0.0:8201"
      tls_disable = "false"
      tls_cert_file = "/vault/certs/vault_{{ grains['id'] }}_fullchain.cer"
      tls_key_file  = "/vault/certs/vault_{{ grains['id'] }}_key.key"
       telemetry {
        unauthenticated_metrics_access = true
      }
    }
    telemetry {
      disable_hostname = true
      prometheus_retention_time = "12h"
    }
    enable_response_header_hostname = true
    enable_response_header_raft_node_id = true
   

